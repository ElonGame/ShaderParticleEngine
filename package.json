{
  "name": "shader-particle-engine",
  "description": "A GLSL-focused particle engine for THREE.js.",
  "version": "1.0.5",
  "author": "Luke Moody (https://github.com/squarefeet/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/squarefeet/ShaderParticleEngine.git"
  },
  "bugs": {
    "url": "https://github.com/squarefeet/ShaderParticleEngine/issues"
  },
  "homepage": "https://github.com/squarefeet/ShaderParticleEngine/",
  "keywords": [
    "three.js",
    "webgl",
    "particle",
    "particles",
    "glsl",
    "shader",
    "spe"
  ],
  "devDependencies": {
    "eslint": "3.9.1",
    "release-it": "^2.5.3",
    "rollup": "^0.37.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^6.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2",
    "xo": "^0.17.1",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0"
  },
  "scripts": {
    "test": "rollup -c",
    "watch": "rollup --watch -c"
  },
  "main": "build/SPE.min.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "dependencies": {
    "three": "^0.84.0"
  },
  "xo": {
    "globals": [],
    "esnext": true,
    "envs": [
      "browser"
    ],
    "plugins": [
      "babel"
    ],
    "ignores": [
      "build/**"
    ],
    "rules": {
      "one-var": "off",
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "pascalCase"
        }
      ],
      "babel/array-bracket-spacing": [
        "error",
        "always",
        {}
      ],
      "babel/object-curly-spacing": [
        "error",
        "always"
      ],
      "babel/arrow-parens": [
        "error",
        "as-needed"
      ],
      "space-in-parens": [
        "error",
        "always"
      ],
      "computed-property-spacing": [
        "error",
        "always"
      ],
      "no-cond-assign": 2,
      "no-constant-condition": 2,
      "no-dupe-args": 2,
      "no-sparse-arrays": 2,
      "no-unreachable": 2,
      "valid-typeof": 2,
      "curly": [
        2,
        "all"
      ],
      "dot-notation": 2,
      "guard-for-in": 2,
      "no-caller": 2,
      "no-eval": 2,
      "no-lone-blocks": 2,
      "no-new-func": 2,
      "no-new-wrappers": 2,
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-redeclare": 2,
      "no-self-compare": 2,
      "no-with": 2,
      "radix": 2,
      "vars-on-top": 2,
      "wrap-iife": 2,
      "yoda": [
        "error",
        "never"
      ],
      "no-shadow": 2,
      "no-undef": 2,
      "no-unused-vars": 2,
      "array-bracket-spacing": [
        2,
        "always",
        {}
      ],
      "brace-style": [
        2,
        "stroustrup",
        {}
      ],
      "camelcase": [
        2,
        {
          "properties": "always"
        }
      ],
      "func-style": [
        2,
        "declaration"
      ],
      "max-nested-callbacks": [
        "error",
        3
      ],
      "no-array-constructor": 2,
      "no-mixed-spaces-and-tabs": 2,
      "no-nested-ternary": 2,
      "no-var": 2,
      "object-shorthand": [
        2,
        "methods"
      ],
      "prefer-const": 2,
      "max-params": 0,
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never"
        }
      ],
      "prefer-arrow-callback": 0,
      "max-depth": [
        "error",
        4
      ],
      "no-implicit-coercion": 0,
      "complexity": 0,
      "prefer-template": [
        "error"
      ],
      "babel/new-cap": 0,
      "new-cap": [
        "error",
        {
          "properties": false
        }
      ]
    },
    "overrides": []
  }
}
